{% extends "../layout.njk" %}

{% block style %}
    <link rel="stylesheet" href="/admin/plugins/toastr/toastr.min.css">
{% endblock style %}

{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Editar Usu치rio</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            Usu치rios
                        </li>
                        <li class="breadcrumb-item active">Editar Usu치rio</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <!-- form start -->
                        <form role="form" class="form" method="POST" action="/seti/users?_method=PUT">
                            {% include "./userFields.njk" %}
                            <input type="hidden" name="id" value="{{user.id}}">
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Atualizar</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <script>
        const userCreate = document.querySelector(".form")
        userCreate.addEventListener("submit", function (event) {
            const confirmar = confirm("Deseja atualizar esse usu치rio?")
            if (!confirmar) {
                event.preventDefault()
            }
        })
    </script>
{% endblock content %}

{% block footerScript %}
<script src="/admin/plugins/toastr/toastr.min.js"></script>
{% include "../layoutParts/messages.njk"%}
{% endblock footerScript %}